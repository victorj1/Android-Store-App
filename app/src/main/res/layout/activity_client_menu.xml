<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientMenu">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/view_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="21dp"
            android:text="View Profile" />

        <Button
            android:id="@+id/make_order"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/view_profile"
            android:layout_alignParentTop="true"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="-51dp"
            android:text="Go To Products" />

        <Button
            android:id="@+id/start_music"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/make_order"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="142dp"
            android:text="Start Music" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>